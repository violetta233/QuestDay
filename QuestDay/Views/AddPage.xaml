<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuestDay.Views.AddPage"
             xmlns:viewmodels="clr-namespace:QuestDay.ViewModels"
             xmlns:converters="clr-namespace:QuestDay.Converters"
             BackgroundColor="#FFFBF6"
             Title="Новая привычка">

    <ContentPage.Resources>
        <converters:DaySelectedToColorConverter x:Key="DaySelectedToColorConverter" />
        <converters:DaySelectedToTextColorConverter x:Key="DaySelectedToTextColorConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Название привычки" FontSize="18" FontAttributes="Bold" />
            <Entry Placeholder="Введите название привычки" 
                   Text="{Binding Name}"
                   ClearButtonVisibility="WhileEditing" />

            <Label Text="Описание" FontSize="18" FontAttributes="Bold" />
            <Editor Placeholder="Добавьте краткое описание (необязательно)" 
                    Text="{Binding Description}"
                    AutoSize="TextChanges"
                    MinimumHeightRequest="80" />

            <Label Text="Дни недели" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
            <CollectionView ItemsSource="{Binding DaysOfWeekSelection.DayOptions}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="7" HorizontalItemSpacing="5" VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:DayOption">
                        <Frame HasShadow="True" CornerRadius="8" Padding="10"
                               BackgroundColor="{Binding IsSelected, Converter={StaticResource DaySelectedToColorConverter}}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleSelectedCommand}" />
                            </Frame.GestureRecognizers>
                            <Label Text="{Binding Name}" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   TextColor="{Binding IsSelected, Converter={StaticResource DaySelectedToTextColorConverter}}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}" 
                               Color="#4CAF50"
                               HorizontalOptions="Center" />

            <Button Text="Сохранить привычку" 
                    Command="{Binding SaveHabitCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    Margin="0,20,0,0"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
